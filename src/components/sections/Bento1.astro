---
/**
 * ============================================================================
 * BENTO1 - Bento Grid Layout with Feature Cards
 * ============================================================================
 *
 * A modern bento-style grid layout featuring 4 cards in an asymmetric layout.
 * Includes headline, tagline, and visual content cards.
 *
 * FEATURES:
 * - Centered headline and tagline
 * - 3-column bento grid with 4 cards (left full-height, middle stacked, right full-height)
 * - Each card has title, description, and visual content
 * - Mobile-first responsive design (stacks on mobile)
 * - Full dark mode support
 * - Accessibility optimized
 *
 * USAGE:
 * <Bento1
 *   tagline="Deploy faster"
 *   headline="Everything you need to deploy your app"
 *   card1Title="Mobile friendly"
 *   card1Description="..."
 *   card1Image="https://..."
 *   card2Title="Performance"
 *   card2Description="..."
 *   card2Image="https://..."
 *   card3Title="Security"
 *   card3Description="..."
 *   card3Image="https://..."
 *   card4Title="Powerful APIs"
 *   card4Description="..."
 *   card4Image="https://..."
 * />
 *
 * NOTE: This component has no background. Use on pages with dark gradient backgrounds.
 * ============================================================================
 */

import Image from '~/components/common/Image.astro';
import { HEADLINE_CLASSES, TEXT_PRIMARY, TEXT_MUTED } from '~/config/theme';
import type { ImageMetadata } from 'astro';

export const metadata = {
  name: 'Bento1',
  path: 'src/components/sections/Bento1.astro',
  description:
    'Bento grid layout with headline and 4 feature cards in asymmetric grid (left full, middle stacked, right full).',
};

export { SECTION_BACKGROUND as background } from '~/config/theme';

interface Props {
  /** Small tagline above headline */
  tagline?: string;
  /** Main headline text */
  headline: string;
  /** Card 1 (left) title */
  card1Title: string;
  /** Card 1 description */
  card1Description: string;
  /** Card 1 image */
  card1Image: string | ImageMetadata;
  /** Card 2 (middle-top) title */
  card2Title: string;
  /** Card 2 description */
  card2Description: string;
  /** Card 2 image */
  card2Image: string | ImageMetadata;
  /** Card 3 (middle-bottom) title */
  card3Title: string;
  /** Card 3 description */
  card3Description: string;
  /** Card 3 image */
  card3Image: string | ImageMetadata;
  /** Card 4 (right) title */
  card4Title: string;
  /** Card 4 description */
  card4Description: string;
  /** Card 4 image */
  card4Image: string | ImageMetadata;
}

const defaultProps: Props = {
  tagline: 'Deploy faster',
  headline: 'Everything you need to deploy your app',
  card1Title: 'Mobile friendly',
  card1Description:
    'Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo.',
  card1Image: 'https://images.pexels.com/photos/3943951/pexels-photo-3943951.jpeg?auto=compress&cs=tinysrgb&w=800',
  card2Title: 'Performance',
  card2Description: 'Lorem ipsum, dolor sit amet consectetur adipisicing elit maiores impedit.',
  card2Image: 'https://images.pexels.com/photos/95916/pexels-photo-95916.jpeg?auto=compress&cs=tinysrgb&w=800',
  card3Title: 'Security',
  card3Description: 'Morbi viverra dui mi arcu sed. Tellus semper adipisicing suspendisse semper morbi.',
  card3Image: 'https://images.pexels.com/photos/96612/pexels-photo-96612.jpeg?auto=compress&cs=tinysrgb&w=800',
  card4Title: 'Powerful APIs',
  card4Description:
    'Sit quis amet rutrum tellus ullamcorper ultricies libero dolor eget sem sodales gravida.',
  card4Image: 'https://images.pexels.com/photos/10816120/pexels-photo-10816120.jpeg?auto=compress&cs=tinysrgb&w=800',
};

const {
  tagline,
  headline,
  card1Title,
  card1Description,
  card1Image,
  card2Title,
  card2Description,
  card2Image,
  card3Title,
  card3Description,
  card3Image,
  card4Title,
  card4Description,
  card4Image,
} = { ...defaultProps, ...Astro.props };
---

<div class="bg-gray-900 py-24 sm:py-32">
  <div class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
    <h2 class="text-center text-base/7 font-semibold text-indigo-400">{tagline}</h2>
    <p class="mx-auto mt-2 max-w-lg text-center text-4xl font-semibold tracking-tight text-balance text-white sm:text-5xl">{headline}</p>
    <div class="mt-10 grid gap-4 sm:mt-16 lg:grid-cols-3 lg:grid-rows-2">
      <div class="relative lg:row-span-2">
        <div class="absolute inset-px rounded-lg bg-gray-800 lg:rounded-l-4xl"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] lg:rounded-l-[calc(2rem+1px)]">
          <div class="px-8 pt-8 pb-3 sm:px-10 sm:pt-10 sm:pb-0">
            <p class="mt-2 text-lg font-medium tracking-tight text-white max-lg:text-center">{card1Title}</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400 max-lg:text-center">{card1Description}</p>
          </div>
          <div class="@container relative min-h-120 w-full grow max-lg:mx-auto max-lg:max-w-sm">
            <div class="absolute inset-x-10 top-10 bottom-0 overflow-hidden rounded-t-[12cqw] border-x-[3cqw] border-t-[3cqw] border-gray-700 bg-gray-900 outline outline-white/20">
              <Image
                src={card1Image}
                alt={card1Title}
                class="size-full object-cover object-top"
                width={600}
                height={800}
                widths={[400, 600, 800]}
                sizes="(max-width: 1024px) 100vw, 33vw"
                loading="lazy"
              />
            </div>
          </div>
        </div>
        <div class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-white/15 lg:rounded-l-4xl"></div>
      </div>
      <div class="relative max-lg:row-start-1">
        <div class="absolute inset-px rounded-lg bg-gray-800 max-lg:rounded-t-4xl"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] max-lg:rounded-t-[calc(2rem+1px)]">
          <div class="px-8 pt-8 sm:px-10 sm:pt-10">
            <p class="mt-2 text-lg font-medium tracking-tight text-white max-lg:text-center">{card2Title}</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400 max-lg:text-center">{card2Description}</p>
          </div>
          <div class="flex flex-1 items-center justify-center px-8 max-lg:pt-10 max-lg:pb-12 sm:px-10 lg:pb-2">
            <Image
              src={card2Image}
              alt={card2Title}
              class="w-full max-lg:max-w-xs"
              width={600}
              height={400}
              widths={[400, 600]}
              sizes="(max-width: 1024px) 100vw, 33vw"
              loading="lazy"
            />
          </div>
        </div>
        <div class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-white/15 max-lg:rounded-t-4xl"></div>
      </div>
      <div class="relative max-lg:row-start-3 lg:col-start-2 lg:row-start-2">
        <div class="absolute inset-px rounded-lg bg-gray-800"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]">
          <div class="px-8 pt-8 sm:px-10 sm:pt-10">
            <p class="mt-2 text-lg font-medium tracking-tight text-white max-lg:text-center">{card3Title}</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400 max-lg:text-center">{card3Description}</p>
          </div>
          <div class="@container flex flex-1 items-center max-lg:py-6 lg:pb-2">
            <Image
              src={card3Image}
              alt={card3Title}
              class="h-[min(152px,40cqw)] object-cover"
              width={600}
              height={400}
              widths={[400, 600]}
              sizes="(max-width: 1024px) 100vw, 33vw"
              loading="lazy"
            />
          </div>
        </div>
        <div class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-white/15"></div>
      </div>
      <div class="relative lg:row-span-2">
        <div class="absolute inset-px rounded-lg bg-gray-800 max-lg:rounded-b-4xl lg:rounded-r-4xl"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] max-lg:rounded-b-[calc(2rem+1px)] lg:rounded-r-[calc(2rem+1px)]">
          <div class="px-8 pt-8 pb-3 sm:px-10 sm:pt-10 sm:pb-0">
            <p class="mt-2 text-lg font-medium tracking-tight text-white max-lg:text-center">{card4Title}</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400 max-lg:text-center">{card4Description}</p>
          </div>
          <div class="relative min-h-120 w-full grow">
            <div class="absolute top-10 right-0 bottom-0 left-10 overflow-hidden rounded-tl-xl bg-gray-900/60 outline outline-white/10">
              <Image
                src={card4Image}
                alt={card4Title}
                class="size-full object-cover object-top"
                width={600}
                height={800}
                widths={[400, 600, 800]}
                sizes="(max-width: 1024px) 100vw, 33vw"
                loading="lazy"
              />
            </div>
          </div>
        </div>
        <div class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-white/15 max-lg:rounded-b-4xl lg:rounded-r-4xl"></div>
      </div>
    </div>
  </div>
</div>
