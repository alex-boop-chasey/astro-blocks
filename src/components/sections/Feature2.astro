---
/**
 * ============================================================================
 * FEATURE2 - Centered Feature Grid Section
 * ============================================================================
 *
 * A centered feature section with eyebrow, headline, description, and 2x2
 * feature grid with icons.
 *
 * FEATURES:
 * - Optional eyebrow/tagline text at top
 * - Large centered headline
 * - Centered description text
 * - 2x2 grid of features with icons
 * - Each feature has icon, title, and description
 * - Mobile-first responsive design (stacks on mobile)
 * - Full dark mode support
 * - Accessibility optimized
 *
 * USAGE:
 * <Feature2
 *   eyebrow="Deploy faster"
 *   headline="Everything you need"
 *   description="Lorem ipsum..."
 *   features={[
 *     { icon: "...", title: "Feature", description: "..." }
 *   ]}
 * />
 *
 * NOTE: This component has no background. Use on pages with dark gradient backgrounds.
 * ============================================================================
 */

import { HEADLINE_CLASSES, SUBTITLE_CLASSES, TEXT_MUTED } from '~/config/theme';

export const metadata = {
  name: 'Feature2',
  path: 'src/components/sections/Feature2.astro',
  description:
    'Centered feature section with eyebrow, headline, description, and 2x2 feature grid with icons.',
};

export { SECTION_BACKGROUND as background } from '~/config/theme';

interface Feature {
  /** SVG icon path data */
  icon: string;
  /** Feature title */
  title: string;
  /** Feature description text */
  description: string;
}

interface Props {
  /** Optional eyebrow/tagline text */
  eyebrow?: string;
  /** Main headline text */
  headline: string;
  /** Description text below headline */
  description: string;
  /** Array of features to display */
  features: Feature[];
}

const defaultProps: Props = {
  eyebrow: 'Deploy faster',
  headline: 'Everything you need to deploy your app',
  description:
    'Quis tellus eget adipiscing convallis sit sit eget aliquet quis. Suspendisse eget egestas a elementum pulvinar et feugiat blandit at. In mi viverra elit nunc.',
  features: [
    {
      icon: 'M3 17v2a2 2 0 002 2h14a2 2 0 002-2v-2M8 12l4-4m0 0l4 4m-4-4v12',
      title: 'Push to deploy',
      description:
        'Morbi viverra dui mi arcu sed. Tellus semper adipiscing suspendisse semper morbi. Odio urna massa nunc massa.',
    },
    {
      icon: 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z',
      title: 'SSL certificates',
      description:
        'Sit quis amet rutrum tellus ullamcorper ultricies libero dolor eget. Sem sodales gravida quam turpis enim lacus amet.',
    },
    {
      icon: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15',
      title: 'Simple queues',
      description:
        'Quisque est vel vulputate cursus. Risus proin diam nunc commodo. Lobortis auctor congue commodo diam neque.',
    },
    {
      icon: 'M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4',
      title: 'Advanced security',
      description:
        'Arcu egestas dolor vel iaculis in ipsum mauris. Tincidunt mattis aliquet hac quis. Id hac maecenas ac donec pharetra eget.',
    },
  ],
};

const { eyebrow, headline, description, features } = { ...defaultProps, ...Astro.props };
---

<section class="relative w-full overflow-hidden py-16 sm:py-20 lg:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header content -->
    <div class="text-center space-y-4 sm:space-y-6 mb-12 sm:mb-16 lg:mb-20 max-w-3xl mx-auto">
      <!-- Eyebrow text -->
      {eyebrow && (
        <div class="text-sm font-semibold text-indigo-400 tracking-wide uppercase">
          {eyebrow}
        </div>
      )}

      <!-- Headline -->
      <h2 class={HEADLINE_CLASSES}>
        {headline}
      </h2>

      <!-- Description -->
      <p class={`${SUBTITLE_CLASSES} ${TEXT_MUTED}`}>
        {description}
      </p>
    </div>

    <!-- Features grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 sm:gap-12 lg:gap-16 max-w-5xl mx-auto">
      {features.map((feature) => (
        <div class="flex gap-4">
          <!-- Icon -->
          <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-indigo-500/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d={feature.icon} />
            </svg>
          </div>

          <!-- Text -->
          <div class="flex-1 space-y-2">
            <h3 class="text-lg font-semibold text-white">
              {feature.title}
            </h3>
            <p class={`text-base ${TEXT_MUTED}`}>
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
