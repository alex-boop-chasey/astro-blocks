---
/**
 * ============================================================================
 * FEATURE2 - Centered Feature Grid Section
 * ============================================================================
 *
 * A centered feature section with eyebrow, headline, description, and 2x2
 * feature grid with icons.
 *
 * FEATURES:
 * - Optional eyebrow/tagline text at top
 * - Large centered headline
 * - Centered description text
 * - 2x2 grid of features with icons
 * - Each feature has icon, title, and description
 * - Mobile-first responsive design (stacks on mobile)
 * - Full dark mode support
 * - Accessibility optimized
 *
 * USAGE:
 * <Feature2
 *   eyebrow="Deploy faster"
 *   headline="Everything you need"
 *   description="Lorem ipsum..."
 *   features={[
 *     { icon: "...", title: "Feature", description: "..." }
 *   ]}
 * />
 *
 * NOTE: This component has no background. Use on pages with dark gradient backgrounds.
 * ============================================================================
 */

import { HEADLINE_CLASSES, SUBTITLE_CLASSES, TEXT_MUTED } from '~/config/theme';

export const metadata = {
  name: 'Feature2',
  path: 'src/components/sections/Feature2.astro',
  description:
    'Centered feature section with eyebrow, headline, description, and 2x2 feature grid with icons.',
};

export { SECTION_BACKGROUND as background } from '~/config/theme';

interface Feature {
  /** SVG icon path data */
  icon: string;
  /** Feature title */
  title: string;
  /** Feature description text */
  description: string;
}

interface Props {
  /** Optional eyebrow/tagline text */
  eyebrow?: string;
  /** Main headline text */
  headline: string;
  /** Description text below headline */
  description: string;
  /** Array of features to display */
  features: Feature[];
}

// ============================================================================
// üìù EDITABLE CONTENT - Change your text and features here
// ============================================================================
const defaultProps: Props = {
  // üí° EYEBROW TEXT (small text above headline)
  eyebrow: 'Deploy faster', // Optional tagline/category

  // üí° MAIN HEADLINE
  headline: 'Everything you need to deploy your app', // Main section headline

  // üí° DESCRIPTION
  description:
    'Quis tellus eget adipiscing convallis sit sit eget aliquet quis. Suspendisse eget egestas a elementum pulvinar et feugiat blandit at. In mi viverra elit nunc.', // Description paragraph below headline

  // üí° FEATURES GRID (2x2 grid of feature items)
  // Each feature includes: icon (SVG path data), title, description
  features: [
    {
      icon: 'M3 17v2a2 2 0 002 2h14a2 2 0 002-2v-2M8 12l4-4m0 0l4 4m-4-4v12', // SVG path data for icon
      title: 'Push to deploy', // Feature title
      description:
        'Morbi viverra dui mi arcu sed. Tellus semper adipiscing suspendisse semper morbi. Odio urna massa nunc massa.', // Feature description
    },
    {
      icon: 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z',
      title: 'SSL certificates',
      description:
        'Sit quis amet rutrum tellus ullamcorper ultricies libero dolor eget. Sem sodales gravida quam turpis enim lacus amet.',
    },
    {
      icon: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15',
      title: 'Simple queues',
      description:
        'Quisque est vel vulputate cursus. Risus proin diam nunc commodo. Lobortis auctor congue commodo diam neque.',
    },
    {
      icon: 'M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4',
      title: 'Advanced security',
      description:
        'Arcu egestas dolor vel iaculis in ipsum mauris. Tincidunt mattis aliquet hac quis. Id hac maecenas ac donec pharetra eget.',
    },
    // üí° ADD MORE FEATURES: Copy a feature block and paste below
  ],
};

const { eyebrow, headline, description, features } = { ...defaultProps, ...Astro.props };
---

<!-- ============================================================================
     üé® LAYOUT & STYLING - Edit classes below to customize appearance
     ============================================================================ -->

<!--
üí° SECTION WRAPPER
- relative: Enables absolute positioning for child elements
- w-full: Full width
- overflow-hidden: Hides content that extends beyond boundaries
- py-16 sm:py-20 lg:py-24: Responsive vertical padding (mobile ‚Üí tablet ‚Üí desktop)
- To adjust spacing: Change py-16 to py-12 (less) or py-20 (more)
- NOTE: No background class - inherits from page background
-->
<section class="relative w-full overflow-hidden py-16 sm:py-20 lg:py-24">

  <!--
  üí° MAIN CONTAINER
  - max-w-7xl: Maximum width for content
  - To change width: Replace with 'max-w-6xl' (narrower) or 'max-w-full' (wider)
  - mx-auto: Centers container
  - px-4 sm:px-6 lg:px-8: Responsive horizontal padding
  -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- ========================================
         üì∞ HEADER - Eyebrow, Headline & Description
         ======================================== -->
    <!--
    üí° HEADER CONTAINER
    - text-center: Centers all text
    - To left-align: Change to 'text-left' and remove 'mx-auto'
    - space-y-4 sm:space-y-6: Responsive vertical spacing (mobile ‚Üí tablet)
    - mb-12 sm:mb-16 lg:mb-20: Bottom margin below header (mobile ‚Üí tablet ‚Üí desktop)
    - To adjust: Change mb-12 to mb-8 (less) or mb-16 (more)
    - max-w-3xl: Maximum width for header text
    - mx-auto: Centers header
    -->
    <div class="text-center space-y-4 sm:space-y-6 mb-12 sm:mb-16 lg:mb-20 max-w-3xl mx-auto">

      <!-- ========================================
           üè∑Ô∏è EYEBROW TEXT
           ======================================== -->
      <!--
      üí° EYEBROW STYLING
      - text-sm: Small font size
      - font-semibold: Semi-bold weight
      - text-indigo-400: Indigo/blue color
      - tracking-wide: Wider letter spacing
      - uppercase: ALL CAPS text
      - To change color: Replace with 'text-blue-400' or 'text-purple-400'
      -->
      {eyebrow && (
        <div class="text-sm font-semibold text-indigo-400 tracking-wide uppercase">
          {eyebrow}
        </div>
      )}

      <!-- ========================================
           üì∞ HEADLINE
           ======================================== -->
      <!--
      üí° HEADLINE STYLING
      - HEADLINE_CLASSES: Responsive headline classes from theme.ts
      - Includes responsive font sizes, bold weight, white color, tight tracking
      -->
      <h2 class={HEADLINE_CLASSES}>
        {headline}
      </h2>

      <!-- ========================================
           üìÑ DESCRIPTION
           ======================================== -->
      <!--
      üí° DESCRIPTION STYLING
      - SUBTITLE_CLASSES: Responsive subtitle classes from theme.ts
      - TEXT_MUTED: Gray text color from theme.ts
      - Comfortable font size and line height for readability
      -->
      <p class={`${SUBTITLE_CLASSES} ${TEXT_MUTED}`}>
        {description}
      </p>
    </div>

    <!-- ========================================
         üé¥ FEATURES GRID (2x2)
         ======================================== -->
    <!--
    üí° GRID LAYOUT
    - grid: CSS Grid layout
    - grid-cols-1: 1 column on mobile
    - md:grid-cols-2: 2 columns on tablet+ (768px+)
    - gap-8 sm:gap-12 lg:gap-16: Responsive space between items (mobile ‚Üí tablet ‚Üí desktop)
    - To adjust spacing: Change gap-8 to gap-6 (less) or gap-10 (more)
    - max-w-5xl: Maximum width for grid
    - mx-auto: Centers grid
    -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 sm:gap-12 lg:gap-16 max-w-5xl mx-auto">
      {features.map((feature) => (
        <!--
        üí° FEATURE ITEM LAYOUT
        - flex: Flexbox layout for icon + text
        - gap-4: Space between icon and text
        - To adjust: Change gap-4 to gap-3 (less) or gap-5 (more)
        -->
        <div class="flex gap-4">

          <!-- ========================================
               üé® FEATURE ICON
               ======================================== -->
          <!--
          üí° ICON CONTAINER
          - shrink-0: Prevents icon from shrinking
          - w-12 h-12: Icon container size (48px √ó 48px)
          - To change size: Use 'w-10 h-10' (smaller) or 'w-14 h-14' (larger)
          - rounded-lg: Rounded corners
          - bg-indigo-500/10: Semi-transparent indigo background
          - flex items-center justify-center: Centers icon
          -->
          <div class="shrink-0 w-12 h-12 rounded-lg bg-indigo-500/10 flex items-center justify-center">
            <!--
            üí° SVG ICON
            - w-6 h-6: Icon size (24px √ó 24px)
            - text-indigo-400: Icon color
            - fill="none": Outline-style icon
            - stroke="currentColor": Uses text color for stroke
            - stroke-width="2": Stroke thickness
            -->
            <svg class="w-6 h-6 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d={feature.icon} />
            </svg>
          </div>

          <!-- ========================================
               üìù FEATURE TEXT
               ======================================== -->
          <!--
          üí° TEXT CONTAINER
          - flex-1: Takes remaining space
          - space-y-2: Vertical space between title and description
          - To adjust: Change space-y-2 to space-y-3 (more) or space-y-1 (less)
          -->
          <div class="flex-1 space-y-2">
            <!--
            üí° FEATURE TITLE
            - text-lg: Large font size
            - font-semibold: Semi-bold weight
            - text-white: White color
            - To adjust: Change text-lg to text-base (smaller) or text-xl (larger)
            -->
            <h3 class="text-lg font-semibold text-white">
              {feature.title}
            </h3>
            <!--
            üí° FEATURE DESCRIPTION
            - text-base: Normal font size
            - TEXT_MUTED: Gray text color from theme.ts
            -->
            <p class={`text-base ${TEXT_MUTED}`}>
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>
