---
/**
 * ============================================================================
 * CONTACT1 - Sales Contact Form Section
 * ============================================================================
 *
 * A professional contact form section for sales inquiries.
 *
 * FEATURES:
 * - Centered headline and description
 * - Full-featured contact form with validation-ready fields
 * - Fields: First name, Last name, Company, Email, Phone (with country code), Message
 * - Privacy policy checkbox
 * - Prominent CTA button
 * - Mobile-first responsive design
 * - Full dark mode support
 * - Accessibility optimized
 *
 * USAGE:
 * <Contact1
 *   headline="Contact sales"
 *   description="Aute magna irure deserunt veniam aliqua magna enim voluptate."
 *   buttonText="Let's talk"
 *   privacyText="By selecting this, you agree to our"
 *   privacyLinkText="privacy policy"
 *   privacyLink="#"
 * />
 * ============================================================================
 */

import {
  SECTION_BACKGROUND,
  TEXT_PRIMARY,
  TEXT_MUTED,
} from '~/config/theme';

export const metadata = {
  name: 'Contact1',
  path: 'src/components/sections/Contact1.astro',
  description: 'Professional sales contact form with all standard fields.',
};

export { SECTION_BACKGROUND as background };

interface Props {
  /** Main headline text */
  headline?: string;
  /** Description below headline */
  description?: string;
  /** Submit button text */
  buttonText?: string;
  /** Privacy policy text */
  privacyText?: string;
  /** Privacy policy link text */
  privacyLinkText?: string;
  /** Privacy policy link URL */
  privacyLink?: string;
}

// ============================================================================
// üìù EDITABLE CONTENT - Change your text and links here
// ============================================================================
const defaultProps: Props = {
  // üí° HEADLINE
  headline: 'Contact sales', // Main form heading

  // üí° DESCRIPTION
  description: 'Aute magna irure deserunt veniam aliqua magna enim voluptate.', // Subtitle below heading

  // üí° SUBMIT BUTTON
  buttonText: "Let's talk", // Text on submit button

  // üí° PRIVACY POLICY
  privacyText: 'By selecting this, you agree to our', // Checkbox label text
  privacyLinkText: 'privacy policy', // Privacy policy link text
  privacyLink: '#', // Privacy policy URL
};

const {
  headline,
  description,
  buttonText,
  privacyText,
  privacyLinkText,
  privacyLink,
} = { ...defaultProps, ...Astro.props };
---

<!-- ============================================================================
     üé® LAYOUT & STYLING - Edit classes below to customize appearance
     ============================================================================ -->

<!--
üí° SECTION WRAPPER
- SECTION_BACKGROUND: Background gradient from theme.ts
- py-24 sm:py-32: Vertical padding (mobile ‚Üí desktop)
- To adjust spacing: Change py-24 to py-16 (less) or py-32 (more)
-->
<section class={`${SECTION_BACKGROUND} py-24 sm:py-32`}>

  <!--
  üí° CONTENT CONTAINER
  - max-w-2xl: Maximum width for form (comfortable reading/form width)
  - To change width: Replace with 'max-w-xl' (narrower) or 'max-w-3xl' (wider)
  - px-6 lg:px-8: Horizontal padding
  -->
  <div class="mx-auto max-w-2xl px-6 lg:px-8">

    <!-- ========================================
         üì∞ HEADER - Headline & Description
         ======================================== -->
    <!--
    üí° HEADER ALIGNMENT & SPACING
    - text-center: Centers headline and description
    - To left-align: Change to 'text-left'
    - space-y-4: Vertical space between headline and description
    - mb-12: Bottom margin below header
    - To adjust: Change mb-12 to mb-8 (less) or mb-16 (more)
    -->
    <div class="text-center space-y-4 mb-12">

      <!--
      üí° HEADLINE STYLING
      - TEXT_PRIMARY: White text color from theme.ts
      - text-4xl sm:text-5xl: Responsive font size
      - font-bold: Bold weight
      - tracking-tight: Tighter letter spacing
      -->
      <h2 class={`text-4xl font-bold tracking-tight ${TEXT_PRIMARY} sm:text-5xl`}>
        {headline}
      </h2>

      <!--
      üí° DESCRIPTION STYLING
      - TEXT_MUTED: Gray text color from theme.ts
      - text-lg: Font size
      - leading-8: Line height for readability
      -->
      {description && (
        <p class={`text-lg leading-8 ${TEXT_MUTED}`}>
          {description}
        </p>
      )}
    </div>

    <!-- ========================================
         üìã CONTACT FORM
         ======================================== -->
    <!--
    üí° FORM SPACING
    - space-y-6: Vertical space between form fields
    - To adjust: Change space-y-6 to space-y-4 (tighter) or space-y-8 (looser)
    -->
    <form class="space-y-6">

      <!-- ========================================
           üë§ NAME FIELDS (First & Last Name Grid)
           ======================================== -->
      <!--
      üí° GRID LAYOUT
      - grid-cols-1 sm:grid-cols-2: 1 column on mobile, 2 columns on tablet+
      - gap-6: Space between grid items
      - To adjust: Change gap-6 to gap-4 (less) or gap-8 (more)
      -->
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">

        <!-- üí° FIRST NAME FIELD -->
        <div>
          <label for="first-name" class={`block text-sm font-medium ${TEXT_PRIMARY} mb-2`}>
            First name
          </label>
          <!--
          üí° INPUT FIELD STYLING
          - bg-gray-800/50: Semi-transparent dark background
          - ring-white/10: Subtle border
          - focus:ring-indigo-500: Blue focus ring
          - rounded-lg: Rounded corners
          - px-4 py-3: Inner padding
          -->
          <input
            type="text"
            name="first-name"
            id="first-name"
            autocomplete="given-name"
            class={`block w-full rounded-lg border-0 bg-gray-800/50 px-4 py-3 ${TEXT_PRIMARY} shadow-sm ring-1 ring-inset ring-white/10 placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6`}
          />
        </div>

        <!-- üí° LAST NAME FIELD -->
        <div>
          <label for="last-name" class={`block text-sm font-medium ${TEXT_PRIMARY} mb-2`}>
            Last name
          </label>
          <input
            type="text"
            name="last-name"
            id="last-name"
            autocomplete="family-name"
            class={`block w-full rounded-lg border-0 bg-gray-800/50 px-4 py-3 ${TEXT_PRIMARY} shadow-sm ring-1 ring-inset ring-white/10 placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6`}
          />
        </div>
      </div>

      <!-- ========================================
           üè¢ COMPANY FIELD
           ======================================== -->
      <div>
        <label for="company" class={`block text-sm font-medium ${TEXT_PRIMARY} mb-2`}>
          Company
        </label>
        <input
          type="text"
          name="company"
          id="company"
          autocomplete="organization"
          class={`block w-full rounded-lg border-0 bg-gray-800/50 px-4 py-3 ${TEXT_PRIMARY} shadow-sm ring-1 ring-inset ring-white/10 placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6`}
        />
      </div>

      <!-- ========================================
           ‚úâÔ∏è EMAIL FIELD
           ======================================== -->
      <div>
        <label for="email" class={`block text-sm font-medium ${TEXT_PRIMARY} mb-2`}>
          Email
        </label>
        <input
          type="email"
          name="email"
          id="email"
          autocomplete="email"
          class={`block w-full rounded-lg border-0 bg-gray-800/50 px-4 py-3 ${TEXT_PRIMARY} shadow-sm ring-1 ring-inset ring-white/10 placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6`}
        />
      </div>

      <!-- ========================================
           üìû PHONE NUMBER FIELD (with Country Code)
           ======================================== -->
      <div>
        <label for="phone" class={`block text-sm font-medium ${TEXT_PRIMARY} mb-2`}>
          Phone number
        </label>
        <!--
        üí° PHONE INPUT WITH COUNTRY SELECTOR
        - flex: Side-by-side country selector and phone input
        - rounded-lg: Rounded corners on outer container
        - focus-within:ring-2: Shows focus ring when either field is focused
        -->
        <div class="flex rounded-lg shadow-sm ring-1 ring-inset ring-white/10 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500">
          <!-- üí° COUNTRY CODE SELECTOR -->
          <select
            id="country"
            name="country"
            autocomplete="country"
            class={`block rounded-l-lg border-0 bg-gray-800/50 py-3 pl-4 pr-8 ${TEXT_PRIMARY} focus:ring-0 sm:text-sm sm:leading-6`}
          >
            <option>US</option>
            <option>CA</option>
            <option>EU</option>
          </select>
          <!-- üí° PHONE NUMBER INPUT -->
          <input
            type="text"
            name="phone"
            id="phone"
            autocomplete="tel"
            placeholder="123-456-7890"
            class={`block flex-1 border-0 bg-gray-800/50 px-4 py-3 ${TEXT_PRIMARY} placeholder:text-gray-500 focus:ring-0 sm:text-sm sm:leading-6 rounded-r-lg`}
          />
        </div>
      </div>

      <!-- ========================================
           üí¨ MESSAGE TEXTAREA
           ======================================== -->
      <div>
        <label for="message" class={`block text-sm font-medium ${TEXT_PRIMARY} mb-2`}>
          Message
        </label>
        <!--
        üí° TEXTAREA STYLING
        - rows="4": Default height (4 rows of text)
        - To adjust height: Change rows="4" to rows="6" (taller) or rows="3" (shorter)
        -->
        <textarea
          name="message"
          id="message"
          rows="4"
          class={`block w-full rounded-lg border-0 bg-gray-800/50 px-4 py-3 ${TEXT_PRIMARY} shadow-sm ring-1 ring-inset ring-white/10 placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6`}
        ></textarea>
      </div>

      <!-- ========================================
           ‚úÖ PRIVACY POLICY CHECKBOX
           ======================================== -->
      <!--
      üí° CHECKBOX LAYOUT
      - flex items-start: Aligns checkbox with start of text
      - gap-3: Space between checkbox and label
      -->
      <div class="flex items-start gap-3">
        <!-- üí° CHECKBOX INPUT -->
        <div class="flex h-6 items-center">
          <input
            id="privacy"
            name="privacy"
            type="checkbox"
            class="h-4 w-4 rounded border-gray-600 bg-gray-800/50 text-indigo-600 focus:ring-indigo-500 focus:ring-offset-gray-900"
          />
        </div>
        <!-- üí° CHECKBOX LABEL WITH LINK -->
        <label for="privacy" class={`text-sm leading-6 ${TEXT_MUTED}`}>
          {privacyText} <a href={privacyLink} class="text-indigo-400 hover:text-indigo-300">{privacyLinkText}</a>.
        </label>
      </div>

      <!-- ========================================
           üîò SUBMIT BUTTON
           ======================================== -->
      <!--
      üí° BUTTON STYLING
      - w-full: Full width button
      - bg-indigo-600: Blue/indigo background
      - hover:bg-indigo-500: Lighter on hover
      - px-6 py-3: Button padding
      - rounded-lg: Rounded corners
      - transition-colors: Smooth color transitions
      -->
      <div>
        <button
          type="submit"
          class={`w-full rounded-lg bg-indigo-600 px-6 py-3 text-base font-semibold ${TEXT_PRIMARY} shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-colors`}
        >
          {buttonText}
        </button>
      </div>

    </form>
  </div>
</section>
