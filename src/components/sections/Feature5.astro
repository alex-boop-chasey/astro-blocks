---
/**
 * ============================================================================
 * FEATURE5 - Asymmetric Feature Grid Section
 * ============================================================================
 *
 * An asymmetric layout with large headline on the left and 2x2 feature grid
 * on the right.
 *
 * FEATURES:
 * - Large headline in left column
 * - 2x2 feature grid in right column
 * - Each feature has icon, title, and description
 * - Icon displayed above feature content
 * - Mobile-first responsive design (stacks on mobile)
 * - Full dark mode support
 * - Accessibility optimized
 *
 * USAGE:
 * <Feature5
 *   headline="Your headline here"
 *   features={[
 *     { icon: "...", title: "Feature", description: "..." }
 *   ]}
 * />
 *
 * NOTE: This component has no background. Use on pages with dark gradient backgrounds.
 * ============================================================================
 */

import { HEADLINE_CLASSES, TEXT_MUTED } from '~/config/theme';

export const metadata = {
  name: 'Feature5',
  path: 'src/components/sections/Feature5.astro',
  description:
    'Asymmetric feature section with large headline on left and 2x2 feature grid on right.',
};

export { SECTION_BACKGROUND as background } from '~/config/theme';

interface Feature {
  /** SVG icon path data */
  icon: string;
  /** Feature title */
  title: string;
  /** Feature description text */
  description: string;
}

interface Props {
  /** Main headline text */
  headline?: string;
  /** Array of features to display (4 features for 2x2 grid) */
  features?: Feature[];
}

const defaultProps: Props = {
  headline: 'Stay on top of customer support',
  features: [
    {
      icon: 'M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16',
      title: 'Spam report',
      description:
        'Autem reprehenderit aut debitis ut. Officiis harum omnis placeat blanditiis delectus sint vel et voluptatum.',
    },
    {
      icon: 'M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z',
      title: 'Compose in markdown',
      description:
        'Illum et aut inventore. Ut et dignissimos quasi. Omnis saepe dolorum. Hic autem fugiat. Voluptatem officiis necessitatibus.',
    },
    {
      icon: 'M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z',
      title: 'Email commenting',
      description:
        'Commodi quam quo. In quasi mollitia optio voluptate et est reiciendis. Ut et sunt id officiis vitae perspiciatis.',
    },
    {
      icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
      title: 'Customer connections',
      description:
        'Deserunt corrupti praesentium quo vel cupiditate est occaecati ad. Aperiam libero modi similique iure praesentium facilis.',
    },
  ],
};

const { headline, features } = { ...defaultProps, ...Astro.props };
---

<section class="relative w-full overflow-hidden py-16 sm:py-20 lg:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-start">
      <!-- Left: Headline -->
      <div>
        <h2 class={`${HEADLINE_CLASSES} max-w-lg`}>
          {headline}
        </h2>
      </div>

      <!-- Right: 2x2 Feature Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 sm:gap-10">
        {features.map((feature) => (
          <div class="space-y-4">
            <!-- Icon -->
            <div class="w-12 h-12 rounded-xl bg-indigo-500 flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d={feature.icon} />
              </svg>
            </div>

            <!-- Text -->
            <div class="space-y-2">
              <h3 class="text-lg font-semibold text-white">
                {feature.title}
              </h3>
              <p class={`text-base ${TEXT_MUTED}`}>
                {feature.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
