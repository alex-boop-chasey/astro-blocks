---
/**
 * ASTROBLOCKS - HERO COMPONENTS SHOWCASE
 *
 * Showcase page for all hero section components.
 * Each component is shown full-width with an info bar above it.
 *
 * Usage: Browse hero components, copy the ones you want to your project
 */
import PageLayout from '~/layouts/PageLayout.astro';
import Hero1, { metadata as hero1Meta, background as hero1Background } from '~/components/sections/Hero1.astro';
import Hero2, { metadata as hero2Meta, background as hero2Background } from '~/components/sections/Hero2.astro';
