---
/**
 * ============================================================================
 * BENTO3 - 2+3 Bento Grid Layout
 * ============================================================================
 *
 * A bento grid with 2 cards on top (50/50) and 3 cards on bottom (33/33/33).
 *
 * FEATURES:
 * - Centered tagline and headline
 * - Top row: 2 cards (50/50 split)
 * - Bottom row: 3 cards (33/33/33 split)
 * - Each card has category, title, description, and image
 * - Mobile-first responsive design (stacks on mobile)
 * - Full dark mode support
 * - Accessibility optimized
 *
 * USAGE:
 * <Bento3
 *   tagline="Deploy faster"
 *   headline="Everything you need to deploy your app"
 *   card1Category="Performance"
 *   card1Title="Lightning-fast builds"
 *   card1Description="..."
 *   card1Image="https://..."
 *   card2Category="Activity"
 *   card2Title="Real-time updates"
 *   card2Description="..."
 *   card2Image="https://..."
 *   card3Category="Speed"
 *   card3Title="Built for power users"
 *   card3Description="..."
 *   card3Image="https://..."
 *   card4Category="Integrations"
 *   card4Title="Connect your favorite tools"
 *   card4Description="..."
 *   card4Image="https://..."
 *   card5Category="Network"
 *   card5Title="Globally distributed CDN"
 *   card5Description="..."
 *   card5Image="https://..."
 * />
 * ============================================================================
 */

import Image from '~/components/common/Image.astro';
import type { ImageMetadata } from 'astro';

export const metadata = {
  name: 'Bento3',
  path: 'src/components/sections/Bento3.astro',
  description: 'Bento grid with 2 cards on top (50/50) and 3 cards on bottom (33/33/33).',
};

export { SECTION_BACKGROUND as background } from '~/config/theme';

interface Props {
  /** Small tagline above headline */
  tagline?: string;
  /** Main headline text */
  headline: string;
  /** Card 1 (top-left) category */
  card1Category: string;
  /** Card 1 title */
  card1Title: string;
  /** Card 1 description */
  card1Description: string;
  /** Card 1 image */
  card1Image: string | ImageMetadata;
  /** Card 2 (top-right) category */
  card2Category: string;
  /** Card 2 title */
  card2Title: string;
  /** Card 2 description */
  card2Description: string;
  /** Card 2 image */
  card2Image: string | ImageMetadata;
  /** Card 3 (bottom-left) category */
  card3Category: string;
  /** Card 3 title */
  card3Title: string;
  /** Card 3 description */
  card3Description: string;
  /** Card 3 image */
  card3Image: string | ImageMetadata;
  /** Card 4 (bottom-middle) category */
  card4Category: string;
  /** Card 4 title */
  card4Title: string;
  /** Card 4 description */
  card4Description: string;
  /** Card 4 image */
  card4Image: string | ImageMetadata;
  /** Card 5 (bottom-right) category */
  card5Category: string;
  /** Card 5 title */
  card5Title: string;
  /** Card 5 description */
  card5Description: string;
  /** Card 5 image */
  card5Image: string | ImageMetadata;
}

const defaultProps: Props = {
  tagline: 'Deploy faster',
  headline: 'Everything you need to deploy your app',
  card1Category: 'Performance',
  card1Title: 'Lightning-fast builds',
  card1Description: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. In gravida justo et nulla efficitur, maximus egestas sem pellentesque.',
  card1Image: 'https://images.pexels.com/photos/590020/pexels-photo-590020.jpeg?auto=compress&cs=tinysrgb&w=800',
  card2Category: 'Activity',
  card2Title: 'Real-time updates',
  card2Description: 'Curabitur auctor, ex quis auctor venenatis, eros arcu rhoncus massa, laoreet dapibus ex elit vitae odio.',
  card2Image: 'https://images.pexels.com/photos/3861972/pexels-photo-3861972.jpeg?auto=compress&cs=tinysrgb&w=800',
  card3Category: 'Speed',
  card3Title: 'Built for power users',
  card3Description: 'Sed congue eros non finibus molestie. Vestibulum euismod augue vel commodo vulputate.',
  card3Image: 'https://images.pexels.com/photos/1194713/pexels-photo-1194713.jpeg?auto=compress&cs=tinysrgb&w=800',
  card4Category: 'Integrations',
  card4Title: 'Connect your favorite tools',
  card4Description: 'Maecenas et augue sed elit dictum vulputate, in nisi aliquam maximus arcu.',
  card4Image: 'https://images.pexels.com/photos/1779487/pexels-photo-1779487.jpeg?auto=compress&cs=tinysrgb&w=800',
  card5Category: 'Network',
  card5Title: 'Globally distributed CDN',
  card5Description: 'Aenean vulputate justo commodo auctor vehicula in malesuada semper.',
  card5Image: 'https://images.pexels.com/photos/1089438/pexels-photo-1089438.jpeg?auto=compress&cs=tinysrgb&w=800',
};

const {
  tagline,
  headline,
  card1Category,
  card1Title,
  card1Description,
  card1Image,
  card2Category,
  card2Title,
  card2Description,
  card2Image,
  card3Category,
  card3Title,
  card3Description,
  card3Image,
  card4Category,
  card4Title,
  card4Description,
  card4Image,
  card5Category,
  card5Title,
  card5Description,
  card5Image,
} = { ...defaultProps, ...Astro.props };
---

<div class="bg-gray-900 py-24 sm:py-32">
  <div class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
    <h2 class="text-center text-base/7 font-semibold text-indigo-400">{tagline}</h2>
    <p class="mx-auto mt-2 max-w-lg text-center text-4xl font-semibold tracking-tight text-balance text-white sm:text-5xl">{headline}</p>

    <div class="mt-10 grid gap-4 sm:mt-16 lg:grid-cols-6">

      <!-- Card 1: Top-left (3 cols = 50%) -->
      <div class="relative lg:col-span-3">
        <div class="absolute inset-px rounded-lg bg-gray-800 max-lg:rounded-t-4xl lg:rounded-tl-4xl"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] max-lg:rounded-t-[calc(2rem+1px)] lg:rounded-tl-[calc(2rem+1px)] max-h-87.5">
          <div class="px-8 pt-8 sm:px-10 sm:pt-10">
            <p class="text-sm font-medium text-indigo-400">{card1Category}</p>
            <p class="mt-2 text-lg font-medium tracking-tight text-white">{card1Title}</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400">{card1Description}</p>
          </div>
          <div class="flex flex-1 items-center justify-center px-8 pt-8 pb-8 sm:px-10">
            <Image
              src={card1Image}
              alt={card1Title}
              class="w-full rounded-lg"
              width={600}
              height={400}
              widths={[400, 600]}
              sizes="(max-width: 1024px) 100vw, 50vw"
              loading="lazy"
            />
          </div>
        </div>
        <div class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-white/15 max-lg:rounded-t-4xl lg:rounded-tl-4xl"></div>
      </div>

      <!-- Card 2: Top-right (3 cols = 50%) -->
      <div class="relative lg:col-span-3 max-lg:row-start-1">
        <div class="absolute inset-px rounded-lg bg-gray-800 lg:rounded-tr-4xl"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] lg:rounded-tr-[calc(2rem+1px)] max-h-87.5">
          <div class="px-8 pt-8 sm:px-10 sm:pt-10">
            <p class="text-sm font-medium text-indigo-400">{card2Category}</p>
            <p class="mt-2 text-lg font-medium tracking-tight text-white">{card2Title}</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400">{card2Description}</p>
          </div>
          <div class="flex flex-1 items-center justify-center px-8 pt-8 pb-8 sm:px-10">
            <Image
              src={card2Image}
              alt={card2Title}
              class="w-full rounded-lg"
              width={600}
              height={400}
              widths={[400, 600]}
              sizes="(max-width: 1024px) 100vw, 50vw"
              loading="lazy"
            />
          </div>
        </div>
        <div class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-white/15 lg:rounded-tr-4xl"></div>
      </div>

      <!-- Card 3: Bottom-left (2 cols = 33%) -->
      <div class="relative lg:col-span-2">
        <div class="absolute inset-px rounded-lg bg-gray-800 lg:rounded-bl-4xl"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] lg:rounded-bl-[calc(2rem+1px)] max-h-87.5">
          <div class="px-8 pt-8 sm:px-10 sm:pt-10">
            <p class="text-sm font-medium text-indigo-400">{card3Category}</p>
            <p class="mt-2 text-lg font-medium tracking-tight text-white">{card3Title}</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400">{card3Description}</p>
          </div>
          <div class="flex flex-1 items-center justify-center px-8 pt-8 pb-8 sm:px-10">
            <Image
              src={card3Image}
              alt={card3Title}
              class="w-full rounded-lg"
              width={400}
              height={400}
              widths={[300, 400]}
              sizes="(max-width: 1024px) 100vw, 33vw"
              loading="lazy"
            />
          </div>
        </div>
        <div class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-white/15 lg:rounded-bl-4xl"></div>
      </div>

      <!-- Card 4: Bottom-middle (2 cols = 33%) -->
      <div class="relative lg:col-span-2">
        <div class="absolute inset-px rounded-lg bg-gray-800"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] max-h-87.5">
          <div class="px-8 pt-8 sm:px-10 sm:pt-10">
            <p class="text-sm font-medium text-indigo-400">{card4Category}</p>
            <p class="mt-2 text-lg font-medium tracking-tight text-white">{card4Title}</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400">{card4Description}</p>
          </div>
          <div class="flex flex-1 items-center justify-center px-8 pt-8 pb-8 sm:px-10">
            <Image
              src={card4Image}
              alt={card4Title}
              class="w-full rounded-lg"
              width={400}
              height={400}
              widths={[300, 400]}
              sizes="(max-width: 1024px) 100vw, 33vw"
              loading="lazy"
            />
          </div>
        </div>
        <div class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-white/15"></div>
      </div>

      <!-- Card 5: Bottom-right (2 cols = 33%) -->
      <div class="relative lg:col-span-2">
        <div class="absolute inset-px rounded-lg bg-gray-800 max-lg:rounded-b-4xl lg:rounded-br-4xl"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] max-lg:rounded-b-[calc(2rem+1px)] lg:rounded-br-[calc(2rem+1px)] max-h-87.5">
          <div class="px-8 pt-8 sm:px-10 sm:pt-10">
            <p class="text-sm font-medium text-indigo-400">{card5Category}</p>
            <p class="mt-2 text-lg font-medium tracking-tight text-white">{card5Title}</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400">{card5Description}</p>
          </div>
          <div class="flex flex-1 items-center justify-center px-8 pt-8 pb-8 sm:px-10">
            <Image
              src={card5Image}
              alt={card5Title}
              class="w-full rounded-lg"
              width={400}
              height={400}
              widths={[300, 400]}
              sizes="(max-width: 1024px) 100vw, 33vw"
              loading="lazy"
            />
          </div>
        </div>
        <div class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-white/15 max-lg:rounded-b-4xl lg:rounded-br-4xl"></div>
      </div>

    </div>
  </div>
</div>
